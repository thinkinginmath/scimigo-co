# Application
CO_APP_NAME="Scimigo Curriculum Orchestrator"
CO_DEBUG=true
CO_ENVIRONMENT=development

# Database
CO_DB_URL=postgresql+asyncpg://scimigo:scimigo@localhost/scimigo_co
CO_DB_POOL_SIZE=10
CO_DB_MAX_OVERFLOW=20

# Redis
CO_REDIS_URL=redis://localhost:6379/0

# External Services
CO_API_BASE=https://api.scimigo.com
CO_EVAL_BASE=https://eval.scimigo.com
CO_PROBLEM_BANK_BASE=https://problems.scimigo.com
CO_TUTOR_BASE=https://tutor.scimigo.com

# Auth (JWT)
CO_JWT_ISSUER=api.scimigo.com
CO_JWT_AUDIENCE=scimigo
CO_JWT_ALGORITHM=RS256
# In production, set CO_JWT_PUBLIC_KEY with actual RSA public key

# CORS
CO_CORS_ORIGINS=["https://coding.scimigo.com", "https://app.scimigo.com", "http://localhost:3000"]

# Rate Limiting
CO_RATE_LIMIT_REQUESTS=60
CO_RATE_LIMIT_WINDOW=60
CO_MAX_CONCURRENT_SSE=2

# Personalization Weights
CO_WEIGHT_WEAKNESS=0.4
CO_WEIGHT_NOVELTY=0.2
CO_WEIGHT_DIFFICULTY=0.25
CO_WEIGHT_RECENCY=0.15

# Spaced Repetition (days)
CO_REVIEW_BUCKETS=[1, 3, 7, 21]

# OpenTelemetry (optional)
CO_OTEL_ENABLED=false
CO_OTEL_ENDPOINT=http://localhost:4317
CO_OTEL_SERVICE_NAME=curriculum-orchestrator